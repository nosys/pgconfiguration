<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.nosys.postgresql.pgconfiguration.pgconfiguration_android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="es.nosys.postgresql.pgconfiguration.pgconfiguration_android.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="es.nosys.postgresql.pgconfiguration.pgconfiguration_android.EditParamActivity"
            android:label="@string/title_activity_param" >
            <intent-filter>
                <action android:name="android.intent.action.EDIT" />
            </intent-filter>
        </activity>
        <activity
            android:name="es.nosys.postgresql.pgconfiguration.pgconfiguration_android.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="es.nosys.postgresql.pgconfiguration.pgconfiguration_android.DumpActivity"
            android:label="@string/title_activity_dump" >
        </activity>
    </application>

</manifest>
